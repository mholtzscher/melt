{
	"name": "melt",
	"module": "src/index.tsx",
	"type": "module",
	"private": true,
	"bin": {
		"melt": "./src/index.tsx"
	},
	"scripts": {
		"dev": "bun run --watch src/index.tsx",
		"start": "bun run src/index.tsx",
		"build": "bun build src/index.tsx --outdir dist --target bun --external solid-js --external @opentui/solid --external @opentui/core",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@types/bun": "^1.3.3"
	},
	"peerDependencies": {
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@babel/core": "^7.28.5",
		"@babel/preset-typescript": "^7.28.5",
		"@opentui/core": "^0.1.57",
		"@opentui/solid": "^0.1.57",
		"babel-preset-solid": "^1.9.10",
		"solid-js": "^1.9.10"
	}
}
