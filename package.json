{
  "name": "melt",
  "private": true,
  "type": "module",
  "module": "src/index.tsx",
  "bin": {
    "melt": "./src/index.tsx"
  },
  "scripts": {
    "dev": "bun run --watch src/index.tsx",
    "start": "bun run src/index.tsx",
    "build": "bun run ./bundle.ts",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint && bun run typecheck",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "postinstall": "bun2nix -o bun.nix"
  },
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@opentui/core": "^0.1.63",
    "@opentui/solid": "^0.1.63",
    "babel-preset-solid": "^1.9.10",
    "cmd-ts": "^0.14.3",
    "opentui-spinner": "^0.0.6",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@tsconfig/bun": "^1.0.10",
    "@types/babel__core": "^7.20.5",
    "@types/bun": "^1.3.5",
    "bun2nix": "^2.0.6",
    "oxlint": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  }
}
