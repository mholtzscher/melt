{
	"name": "melt",
	"module": "src/index.tsx",
	"type": "module",
	"private": true,
	"bin": {
		"melt": "./src/index.tsx"
	},
	"scripts": {
		"dev": "bun run --watch src/index.tsx",
		"start": "bun run src/index.tsx",
		"build": "bun run ./bundle.ts",
		"typecheck": "tsc --noEmit",
		"lint": "biome check . && bun run typecheck",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"postinstall": "bun2nix -o bun.nix"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@tsconfig/bun": "^1.0.10",
		"@types/babel__core": "^7.20.5",
		"@types/bun": "^1.3.4",
		"bun2nix": "^2.0.6"
	},
	"peerDependencies": {
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"@babel/core": "^7.28.5",
		"@babel/preset-typescript": "^7.28.5",
		"@opentui/core": "^0.1.60",
		"@opentui/solid": "^0.1.60",
		"babel-preset-solid": "^1.9.10",
		"opentui-spinner": "^0.0.6",
		"solid-js": "^1.9.10"
	}
}
